  #video-player

:javascript
    let src

    function callVideo(src) {
      $.ajax({
        dataType: "script",
        type:    "GET",
        url:     "/video-player",
        data:    { src: src },
        success: function(post){ console.log('success') },
        error:   function(post){ console.log('error') }
      })
    }

    if (window.location.hash) {
      src = $(window.location.hash).data('url')
      callVideo(src)
    }

    $('.poster').click(function(e) {
      src = $(this).data('url')
      callVideo(src)
    })
